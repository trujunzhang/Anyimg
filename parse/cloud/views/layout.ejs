<html>
  <head>
     <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
     <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"></script>
     <% if (locals.title) { %>
       <title><%= title %></title>
     <% } else { %>
       <title>AnyImg</title>
     <% } %>
     <link href='//fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
      <script src="/javascripts/backbone.js"></script>
     <script src="https://www.parsecdn.com/js/parse-1.2.8.min.js"></script>
      <script src="/javascripts/bootstrap/bootstrap.min.js"></script>
     <script>
       Parse.initialize("YOUR_APPLICATION_ID", "YOUR_JAVASCRIPT_KEY");
     </script>
     <script type="text/javascript" src="/javascripts/main.js"></script>
      <link href="/stylesheets/styles.css" rel="stylesheet" type="text/css" />
      <link href="/stylesheets/bootstrap.css" rel="stylesheet" type="text/css" />

      <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
      <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
      <![endif]-->

  </head>

  <body>
    <div id="content">
      <div id="bar">
        <a class="logo" href="/">
          <h1>AnyImg</h1>
        </a>

        <ul class="right">
        <% if (!Parse.User.current()) { %>
          <li>
            <a href="/">Share an image</a>
            | <a href="/i/latest">Latest</a>
            | <a href="/login">Login</a>
            | <a href="/signup">Signup</a>
          </li>
        <% } else { %>
          <li>
            <a href="/i/mine"><%= Parse.User.current().get('username') %></a>
            | <a href="/">Share an image</a>
            | <form action="/logout" method="post">
              <a href="#" data-action="post">Logout</a>
            </form>
          </li>
        <% } %>
        </ul>
      </div>

      <div id="main">
        <% if (locals.flash) { %>
          <div class="flash"><%= flash %></div>
        <% } %>

        <%- body %>
      </div>
    </div>
  </body>
</html>
  
